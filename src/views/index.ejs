<% include partials/header %>

<div class="container p-4">
    <div class="row">
        <div class="card-columns">
            <% images.forEach(function(image){ %>
                <div class="card">
                    <div class="card-body">
                        <img src="<%= image.path %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= image.title %>
                            </h5>
                            <p class="card-text">
                                <%= image.description %>
                            </p>
                            <p class="card-text">
                                <%= format(image.create_at) %>
                            </p>
                            <a href="/profile/<%= image._id %>" class="btn btn-info">Ver imagen</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer %>